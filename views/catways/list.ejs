<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <div class="container mt-4">
    <%- include('../partials/messages') %>
    
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1><i class="bi bi-list"></i> <%= title %></h1>
      <a href="/dashboard" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Retour
      </a>
    </div>

    <div class="card">
      <div class="card-body">
        <% if (catways.length === 0) { %>
          <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucun catway trouvé
          </div>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Numéro</th>
                  <th>Type</th>
                  <th>État</th>
                  <th>Date de création</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% catways.forEach(catway => { %>
                  <tr>
                    <td><strong><%= catway.catwayNumber %></strong></td>
                    <td>
                      <span class="badge bg-<%= catway.type === 'long' ? 'primary' : 'secondary' %>">
                        <%= catway.type %>
                      </span>
                    </td>
                    <td><%= catway.catwayState %></td>
                    <td><%= new Date(catway.createdAt).toLocaleDateString('fr-FR') %></td>
                    <td>
                      <a href="/dashboard/catways/<%= catway._id %>" class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i> Détails
                      </a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
